# Copy these to Render Dashboard → Your Service → Environment

# Authentication
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=your_secure_password

# Server Configuration
N8N_PORT=5678
N8N_PROTOCOL=https
N8N_LISTEN_ADDRESS=0.0.0.0
N8N_HOST=your-service-name.onrender.com
WEBHOOK_URL=https://your-service-name.onrender.com/

# Database (Neon PostgreSQL)
DB_TYPE=postgresdb
DB_POSTGRESDB_HOST=your-neon-host.ap-southeast-1.aws.neon.tech
DB_POSTGRESDB_PORT=5432
DB_POSTGRESDB_DATABASE=neondb
DB_POSTGRESDB_USER=neondb_owner
DB_POSTGRESDB_PASSWORD=your-neon-password
DB_POSTGRESDB_SSLMODE=require

